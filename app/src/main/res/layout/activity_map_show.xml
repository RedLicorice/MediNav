<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_map_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unirc.barbiana20.medinav.MapShow">
<android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:text="R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:onClick="resetMap"
        app:layout_constraintRight_toLeftOf="@+id/btnTrX"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp" />
    <Button
        android:text="T X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTrX"
        android:onClick="translateTestX"
        app:layout_constraintRight_toLeftOf="@+id/btnTrY"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp" />

    <Button
        android:text="T Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTrY"
        android:onClick="translateTestY"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toLeftOf="@+id/floatingActionButton"
        android:layout_marginEnd="24dp" />

    <com.onlylemi.mapview.library.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:text="Log:"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/log_viewer"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp" />

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/qrcode_scan"
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:backgroundTint="@android:color/holo_blue_bright"
        android:onClick="scanQR"
        android:id="@+id/floatingActionButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintRight_toRightOf="@+id/mapview"
        android:layout_marginEnd="16dp" />


</android.support.constraint.ConstraintLayout>